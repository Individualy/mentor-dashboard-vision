# Backend Environment Variables

# Database Configuration
DATABASE_URL=mysql+mysqlconnector://root:12345678@localhost/mentor_dashboard

# Security
SECRET_KEY=your_secure_secret_key_for_flask_app
JWT_SECRET_KEY=your_secure_jwt_secret_key
SECURITY_TOKEN_SALT=email-verification-salt

# Server Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1
PORT=5001
HOST=0.0.0.0

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:8081

# Email Configuration
EMAIL_SENDER=your_email@example.com

# Logging
LOG_LEVEL=DEBUG
